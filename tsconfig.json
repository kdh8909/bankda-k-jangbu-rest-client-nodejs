{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": [
        "es2018"
      ],
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": "."
    },
    "include": [
      "lib/",
    ],
    "exclude": [
      "node_modules",
      "example/"
    ]
  }
